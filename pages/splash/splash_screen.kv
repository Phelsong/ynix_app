<SplashScreen>:
    AnchorLayout:
        # layout_hint_with_bounds(sh_sum, available_space, min_bounded_size, sh_min_vals, sh_max_vals, hint)
        padding: 50
        Label:
            anchor_y: 'center'
            anchor_x: 'center'
            valign: 'top'
            halign: 'center'
            size_hint: (None, 1)
            width: 300
            text: "Welcome to ~Red Moon~"
            text_size: self.width-40, self.height-40
            background_color: "green"
        Button:
            size_hint: (.2, .125)
            width: 200
            height: 125
            anchor_x: 'center'
            anchor_y: 'center'
            valign: 'center'
            halign: 'center'
            text: "Login"
            text_size: self.width-40, self.height-40
            background: "grey"
            on_release: root.manager.current = 'LoginScreen'
