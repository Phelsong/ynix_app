<SplashScreen>: #:kivy
    GridLayout:
        # layout_hint_with_bounds(sh_sum, available_space, min_bounded_size, sh_min_vals, sh_max_vals, hint
        rows: 5
        columns: 3
        padding: 50
        Label:
            id: title1
            width: 300
            valign: 'top'
            halign: 'center'
            text: "Welcome to ~Project Ynix~"
            text_size: self.width-5, self.height-5
            background_color: "green"
        Button:
            id: login_nav
            text: "Login"
            size_hint: (.2, .125)
            width: 200
            height: 125
            valign: 'center'
            halign: 'center'
            background: "grey"
            on_release: root.manager.current = 'LoginScreen'
        Button:
            id: sim_nav
            size_hint: (.1, .125)
            width: 200
            height: 125
            valign: 'center'
            halign: 'center'
            text: "Sim Settings"
            background: "grey"
            on_release: root.manager.current = 'SimSettingsScreen'
        Button:
            id: wiki_nav
            size_hint: (.1, .125)
            width: 200
            height: 125
            valign: 'center'
            halign: 'center'
            text: "Wiki"
            background: "grey"
            on_release: root.manager.current = 'WikiScreen'

