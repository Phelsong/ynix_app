<SplashScreen>: #:kivy
    GridLayout:
        # layout_hint_with_bounds(sh_sum, available_space, min_bounded_size, sh_min_vals, sh_max_vals, hint
        rows: 5
        columns: 3
        padding: 50
        Label:
            width: 300
            valign: 'top'
            halign: 'center'
            text: "Welcome to ~Red Moon~"
            text_size: self.width-40, self.height-40
            background_color: "green"
        Button:
            text: "Login"
            size_hint: (.2, .125)
            width: 200
            height: 125
            valign: 'center'
            halign: 'center'
            text_size: self.width-40, self.height-40
            background: "grey"
            on_release: root.manager.current = 'LoginScreen'
        Button:
            size_hint: (.1, .125)
            width: 200
            height: 125
            valign: 'center'
            halign: 'center'
            text: "Sim Settings"
            text_size: self.width-40, self.height-40
            background: "grey"
            on_release: root.manager.current = 'SimSettingsScreen'
