<SimSettingsScreen>: #:kivy
    GridLayout:
        rows: 3
        columns: 3
        padding: 50
        Label:
            valign: 'top'
            halign: 'center'
            size_hint: (None, 1)
            width: 300
            text: "Sim Settings"
            text_size: self.width-40, self.height-40
            background_color: "green"
        Button:
            size_hint: (.2, .125)
            width: 200
            height: 125
            valign: 'center'
            halign: 'center'
            text: "Nav>Login"
            text_size: self.width-40, self.height-40
            background: "grey"
            on_release: root.manager.current = 'SplashScreen'
        